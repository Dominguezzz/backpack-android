<resources>

  <style name="Widget.London.BpkText" parent="">
    <item name="textColor">@color/bpkRed500</item>
    <!-- Not exactly a themable property but can be set too, if we feel this
     is not desired we can use a different strategy to load this in the component -->
    <!--<item name="emphasize">true</item>-->
  </style>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/bpkBlue500</item>
    <item name="colorPrimaryDark">@color/bpkBlue700</item>
    <item name="colorAccent">@color/bpkGreen500</item>
    <item name="android:windowBackground">@color/bpkWhite</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

  <!-- This would be an airline theme -->
  <style name="LondonTheme" parent="AppTheme">
    <!-- Apply the custom styles for the BpkText component -->
    <item name="bpkTextStyle">@style/Widget.London.BpkText</item>
  </style>


</resources>
